{
  "name": "@thecraftlab/gluecraft",
  "version": "0.0.2",
  "description": "Gluecraft JPD: Bidirectional sync between Jira Product Discovery and GitHub Issues with support for custom fields, hierarchies, and workflows",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "gluecraft": "./dist/cli.js"
  },
  "files": [
    "dist",
    "config/gluecraft.minimal.yaml",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest",
    "test:e2e": "vitest run tests/e2e",
    "test:capture-fixtures": "tsx tests/e2e/capture-fixtures.ts",
    "build": "tsup && chmod +x dist/cli.js",
    "dev": "tsx src/cli.ts",
    "sync": "tsx src/cli.ts sync",
    "setup": "tsx src/cli.ts setup",
    "discover": "tsx src/cli.ts discover",
    "health": "tsx src/cli.ts health",
    "validate": "tsx src/cli.ts validate",
    "setup-labels": "tsx src/cli.ts setup-labels",
    "test-connection": "tsx src/cli/test-connection.ts",
    "test-simple": "tsx src/cli/test-connection-simple.ts",
    "clear-labels": "tsx src/cli/clear-labels.ts",
    "clear-all-labels": "tsx src/cli/clear-all-labels.ts",
    "docs:dev": "pnpm --filter website start",
    "docs:build": "pnpm --filter website build",
    "docs:serve": "pnpm --filter website serve",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "gluecraft",
    "jira",
    "jpd",
    "jira-product-discovery",
    "github",
    "github-issues",
    "sync",
    "bidirectional",
    "integration",
    "atlassian",
    "project-management",
    "issue-tracking",
    "workflow-automation",
    "the-craft-lab"
  ],
  "author": "The Craft Lab",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thecraftlab/gluecraft.git"
  },
  "bugs": {
    "url": "https://github.com/thecraftlab/gluecraft/issues"
  },
  "homepage": "https://github.com/thecraftlab/gluecraft#readme",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/commander": "^2.12.5",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.3",
    "@types/yaml": "^1.9.7",
    "@vitest/coverage-v8": "^4.0.16",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "inquirer": "^13.1.0",
    "ora": "^9.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
